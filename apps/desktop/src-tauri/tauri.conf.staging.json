{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyprnote Staging",
  "mainBinaryName": "Hyprnote Staging",
  "identifier": "com.hyprnote.staging",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "hyprnote-staging"
        ]
      }
    },
    "updater": {
      "active": false
    }
  },
  "bundle": {
