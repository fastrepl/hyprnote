{
  "$schema": "https://schema.tauri.app/config/2",
  "version": "0.1.0",
  "productName": "Hypr",
  "mainBinaryName": "Hypr",
  "identifier": "com.hyprnote.desktop",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "14.2",
      "entitlements": "./Entitlements.plist"
    },
    "icon": [
      "icons/32.png",
      "icons/128.png",
      "icons/256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["hypr"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": ["https://api.todo.com"],
      "dialog": false,
      "pubkey": "..."
    }
  }
}
