{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,
    "types": ["@types/bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-slack"
  }
}
