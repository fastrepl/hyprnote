{
  "$schema": "https://schema.tauri.app/config/2",
  "version": "0.0.1",
  "productName": "Hyprnote",
  "mainBinaryName": "Hyprnote",
  "identifier": "com.hyprnote.desktop",
  "build": {
    "beforeDevCommand": "pnpm -F desktop dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm -F desktop build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "14.2",
      "entitlements": "./Entitlements.plist"
    },
    "icon": [
      "icons/32.png",
      "icons/128.png",
      "icons/256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["hypr"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/fastrepl/hyprnote/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3NUMyMzg1NkExMjFDOTgKUldTWUhCSnFoU05jWjN2SGpRbUsyUVN3eTc0a2NVVmNzUVNzUE9McW5RK3RqYmNadmxvY29ha3EK"
    }
  }
}
