{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyprnote Control",
  "mainBinaryName": "Hyprnote Control",
  "identifier": "com.hyprnote.control",
  "build": {
    "beforeDevCommand": "pnpm -F @hypr/control dev",
    "devUrl": "http://localhost:1424",
    "beforeBuildCommand": "pnpm -F @hypr/control build",
    "frontendDist": "../../apps/control/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Hyprnote Control",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
