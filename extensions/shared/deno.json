{
  "nodeModulesDir": "none",
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "esnext"]
  },
  "tasks": {
    "generate": "deno run -A generate.ts",
    "build": "deno run -A build.ts build",
    "build:calendar": "deno run -A build.ts build calendar",
    "clean": "deno run -A build.ts clean",
    "install:dev": "deno run -A build.ts install"
  },
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "esbuild": "npm:esbuild@0.24.0",
    "nunjucks": "npm:nunjucks@3.2.4",
    "react": "npm:@types/react@^18",
    "tinybase/ui-react/with-schemas": "npm:tinybase@6.7.3/ui-react/with-schemas",
    "tinybase/with-schemas": "npm:tinybase@6.7.3/with-schemas"
  }
}
