{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyprnote Dev",
  "mainBinaryName": "Hyprnote Dev",
  "identifier": "com.hyprnote.dev",
  "build": {
    "beforeDevCommand": "pnpm -F desktop dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "pnpm -F desktop build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*",
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "publisher": "Fastrepl",
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/dark/32x32.png",
      "icons/dark/128x128.png",
      "icons/dark/128x128@2x.png",
      "icons/dark/icon.icns",
      "icons/dark/icon.ico"
    ],
    "resources": {
      "icons/beta/icon.icns": "icons/beta.icns",
      "icons/dark/icon.icns": "icons/dark.icns",
      "icons/light/icon.icns": "icons/light.icns",
      "icons/pro/icon.icns": "icons/pro.icns",
      "icons/xmas-beta/icon.icns": "icons/xmas-beta.icns",
      "icons/xmas-dark/icon.icns": "icons/xmas-dark.icns",
      "icons/xmas-light/icon.icns": "icons/xmas-light.icns",
      "icons/xmas-pro/icon.icns": "icons/xmas-pro.icns",
      "icons/hanukkah/icon.icns": "icons/hanukkah.icns",
      "icons/kwanzaa/icon.icns": "icons/kwanzaa.icns"
    },
    "macOS": {
      "minimumSystemVersion": "14.2",
      "entitlements": "./Entitlements.plist",
      "dmg": {
        "background": "assets/dmg-background-stable.png",
        "windowSize": {
          "width": 660,
          "height": 430
        },
        "appPosition": {
          "x": 177,
          "y": 200
        },
        "applicationFolderPosition": {
          "x": 483,
          "y": 200
        }
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "Hyprnote",
      "args": [],
      "subcommands": {
        "bug": {
          "description": "Open GitHub issues page to report a bug"
        },
        "web": {
          "description": "Open https://hyprnote.com"
        },
        "changelog": {
          "description": "Open the changelog page"
        },
        "update": {
          "description": "Check for updates and install if available"
        }
      }
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "hyprnote"
        ]
      }
    },
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFFNUI0ODhBNzhBMTEwQQpSV1FLRVlxbmlMVGxDdXJvaUVTTnlwNEF5R1Bodzh3WThMZUpNMVk4K0hhbnV4TDZ1TFFucC9Gbwo="
    }
  }
}
