{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hypr",
  "version": "0.1.0",
  "identifier": "com.hyprnote.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": true,
        "height": 800,
        "width": 1200,
        "title": "Hypr - AI Notepad for Meetings"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "14.2"
    },
    "icon": [
      "icons/32.png",
      "icons/128.png",
      "icons/256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
